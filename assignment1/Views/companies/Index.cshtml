@model IEnumerable<assignment1.Models.company>

@{
    ViewBag.Title = "Companies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Companies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table sortable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CEO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numEmployees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stockName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @*is it possible to set the Default for logo ? I should have allowed the database to be NULL but I forgot,
                and doing it now is going to deleted all the changes I made to models and controllers-
                In that line of thought, can I update the database after I've created tables ?*@
                @if (item.Logo == "logo")
                {
                    
            <img src="~/Content/Images/Logos/placeholder.png" alt="@item.Logo" width="30" />
                }
                else
                {//src="@item.Logo" isn't working for whatever reason, even if you set the Logo field in the browser
                 // as the correct file locations. ~/Content/Images/Logos/Nikon.jpg in the logo field, for example
                 // hard coded for now to display how I want it to look
            <img src="~/Content/Images/Logos/Nikon.jpg" alt="@item.Name" width="30" />
}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numEmployees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stockName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.companyID }) |
                @Html.ActionLink("Details", "Details", new { id = item.companyID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.companyID })
            </td>
        </tr>
    }

</table>
